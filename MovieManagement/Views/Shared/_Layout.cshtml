<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Movietto</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="
    background-image: url('@Url.Content("~/background.png")'); 
  background-repeat: no-repeat; 
  background-size: cover; 
  background-attachment: fixed;
  background-position: center;
">

@{
    var selectedSort = ViewBag.SortBy as string ?? "Sort";
    var query = ViewBag.Query as string ?? "";
    var displayName = ViewContext.ActionDescriptor.DisplayName?.ToLower() ?? "";
    var hideSortFilter = displayName.Contains("/account/");
}

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="/">Movietto</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/Watchlist">Watchlist</a>
                </li>
            </ul>

            <!-- Search Form -->
            <form class="d-flex me-3" method="get" asp-controller="Home" asp-action="Index" onsubmit="return validateSearch();">
                <input class="form-control me-2" id="searchInput" style="width: 300px;" type="search" name="query" placeholder="Search.. (at least 3 characters)" aria-label="Search">
                <input type="hidden" name="sortBy" value="@ViewBag.SortBy"/>
                <input type="hidden" name="genre" value="@ViewBag.SelectedGenre"/>
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>

            <script>
                function validateSearch() {
                    const input = document.getElementById('searchInput').value.trim();
                    if (input.length < 3) {
                        alert("Please enter at least 3 characters to search.");
                        return false; // prevent form submission
                    }
                    return true;
                }
            </script>

            @if (User.Identity.IsAuthenticated)
            {
                <span style="color: white">Hello, @User.Identity.Name!</span>
            }
            else
            {
                <!-- Right Side - Authentication -->
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                </ul>
            }
        </div>
    </nav>
</header>

<main role="main" class="container mt-4">
    @if (!hideSortFilter)
    {
        <!-- Sort & Filter Controls -->
        @if (query == "")
        {
            <div class="d-flex justify-content-between align-items-center mb-4">
                <!-- Sort Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-dark dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="width: 200px">
                        Sort: @selectedSort
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Title" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Title</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Rating" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Rating</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Release" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Release Date</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Title Descending" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Title Descending</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Rating Descending" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Rating Descending</a></li>
                        <li>
                            <a class="dropdown-item" asp-controller="Home" asp-action="Index" asp-route-sortBy="Release Year Descending" asp-route-genre="@ViewBag.SelectedGenre"
                               asp-route-query="@ViewBag.Query">Release Date Descending</a></li>
                    </ul>
                    <!-- Filter Dropdown -->
                    @await Component.InvokeAsync("GenreFilter")
                </div>
            </div>
        }
    }
    @RenderBody()
    @RenderSection("Scripts", required: false)

</main>

<footer class="text-center text-muted py-3">
    <hr/>
    <p>&copy; @DateTime.Now.Year - Movietto</p>
</footer>
</body>
</html>
